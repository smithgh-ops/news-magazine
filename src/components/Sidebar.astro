---
import { format } from 'date-fns';
import { getMockPopularArticles, getMockCategories, getMockTags } from '../lib/mockData';

// Get sidebar data
const popularArticles = getMockPopularArticles(5);
const categories = getMockCategories();
const tags = getMockTags();
---

<aside class="space-y-8">
  <!-- Popular Articles -->
  <section class="bg-white rounded-lg shadow-sm p-6">
    <h3
      class="text-xl font-black font-serif text-gray-900 mb-4 pb-2 border-b-2 border-news-primary"
    >
      Artikel Populer
    </h3>
    <div class="space-y-4">
      {
        popularArticles.map((article) => (
          <article class="group">
            <a href={`/articles/${article.slug}`} class="block">
              <div class="flex gap-3">
                {article.featuredImage && (
                  <div class="flex-shrink-0 w-20 h-20 rounded overflow-hidden bg-gray-200">
                    <img
                      src={article.featuredImage}
                      alt={article.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    />
                  </div>
                )}
                <div class="flex-1 min-w-0">
                  <h4 class="text-sm font-bold text-gray-900 group-hover:text-news-primary transition-colors line-clamp-2 mb-1">
                    {article.title}
                  </h4>
                  <div class="flex items-center text-xs text-gray-500">
                    <time datetime={article.publishedAt}>
                      {format(new Date(article.publishedAt), 'MMM d, yyyy')}
                    </time>
                    {article.views && (
                      <>
                        <span class="mx-1">â€¢</span>
                        <span>{article.views.toLocaleString()} views</span>
                      </>
                    )}
                  </div>
                </div>
              </div>
            </a>
          </article>
        ))
      }
    </div>
  </section>

  <!-- Categories -->
  <section class="bg-white rounded-lg shadow-sm p-6">
    <h3
      class="text-xl font-black font-serif text-gray-900 mb-4 pb-2 border-b-2 border-news-primary"
    >
      Kategori
    </h3>
    <div class="space-y-2">
      {
        categories.map((category) => (
          <a
            href={`/categories/${category.slug}`}
            class="flex items-center justify-between py-2 px-3 rounded hover:bg-gray-50 transition-colors group"
          >
            <span class="text-sm font-semibold text-gray-700 group-hover:text-news-primary transition-colors">
              {category.name}
            </span>
            <svg
              class="w-4 h-4 text-gray-400 group-hover:text-news-primary transition-colors"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"
              />
            </svg>
          </a>
        ))
      }
    </div>
  </section>

  <!-- Tags -->
  <section class="bg-white rounded-lg shadow-sm p-6">
    <h3
      class="text-xl font-black font-serif text-gray-900 mb-4 pb-2 border-b-2 border-news-primary"
    >
      Tag Populer
    </h3>
    <div class="flex flex-wrap gap-2">
      {
        tags.map((tag) => (
          <a
            href={`/tags/${tag.slug}`}
            class="inline-block px-3 py-1 text-sm font-semibold text-gray-700 bg-gray-100 hover:bg-news-primary hover:text-white rounded-full transition-colors"
          >
            #{tag.name}
          </a>
        ))
      }
    </div>
  </section>
</aside>
