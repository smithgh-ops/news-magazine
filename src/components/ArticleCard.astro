---
import { format } from 'date-fns';
import type { Article } from '../lib/types';

interface Props {
  article: Article;
  featured?: boolean;
}

const { article, featured = false } = Astro.props;
const formattedDate = format(new Date(article.publishedAt), 'MMMM d, yyyy');
---

<article class={`group ${featured ? 'col-span-full' : ''}`}>
  <a href={`/articles/${article.slug}`} class="block">
    {
      article.featuredImage && (
        <div
          class={`relative overflow-hidden rounded-lg bg-gray-200 ${featured ? 'aspect-[21/9]' : 'aspect-[16/9]'} mb-3`}
        >
          <img
            src={article.featuredImage}
            alt={article.title}
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            loading="lazy"
          />
          {article.categories.length > 0 && (
            <div class="absolute top-3 left-3">
              <span class="inline-block px-3 py-1 text-xs font-bold text-white bg-news-accent rounded">
                {article.categories[0].name}
              </span>
            </div>
          )}
        </div>
      )
    }

    <div class={featured ? 'max-w-3xl' : ''}>
      <h2
        class={`font-serif font-bold mb-2 group-hover:text-news-primary transition-colors ${
          featured ? 'text-3xl md:text-4xl' : 'text-xl md:text-2xl'
        }`}
      >
        {article.title}
      </h2>

      <p class={`text-gray-600 mb-3 line-clamp-2 ${featured ? 'text-lg' : 'text-base'}`}>
        {article.excerpt}
      </p>

      <div class="flex items-center text-sm text-gray-500">
        <span class="font-semibold text-gray-700">{article.author.name}</span>
        <span class="mx-2">â€¢</span>
        <time datetime={article.publishedAt}>{formattedDate}</time>
      </div>
    </div>
  </a>
</article>
