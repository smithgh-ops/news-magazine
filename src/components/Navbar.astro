---
const siteName = import.meta.env.PUBLIC_SITE_NAME;

const navItems = [
  { label: 'Beranda', href: '/' },
  { label: 'Politik', href: '/categories/politik' },
  { label: 'Bisnis', href: '/categories/bisnis' },
  { label: 'Teknologi', href: '/categories/teknologi' },
  { label: 'Olahraga', href: '/categories/olahraga' },
  { label: 'Internasional', href: '/categories/internasional' },
];
---

<nav class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Top Bar -->
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <span class="text-2xl font-black text-news-primary font-serif">{siteName}</span>
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-6">
          {navItems.map((item) => (
            <a
              href={item.href}
              class="text-gray-700 hover:text-news-primary px-3 py-2 text-sm font-semibold transition-colors"
            >
              {item.label}
            </a>
          ))}
        </div>
      </div>
      
      <!-- Search Button (Desktop) -->
      <div class="hidden md:block">
        <button class="p-2 text-gray-600 hover:text-news-primary transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
      </div>
      
      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button type="button" class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-news-primary focus:outline-none">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Menu -->
  <div class="mobile-menu hidden md:hidden border-t border-gray-200">
    <div class="px-2 pt-2 pb-3 space-y-1">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-news-primary hover:bg-gray-50 rounded-md"
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const btn = document.querySelector('.mobile-menu-button');
  const menu = document.querySelector('.mobile-menu');
  
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
