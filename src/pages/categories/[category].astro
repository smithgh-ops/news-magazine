---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import ArticleCard from '../../components/ArticleCard.astro';
import { getMockArticlesByCategory, getMockCategories } from '../../lib/mockData';

export async function getStaticPaths() {
  const categories = getMockCategories();
  
  return categories.map((category) => {
    const response = getMockArticlesByCategory(category.slug, 1, 100);
    return {
      params: { category: category.slug },
      props: { 
        category,
        articles: response.data,
      },
    };
  });
}

const { category, articles } = Astro.props;
---

<Layout 
  title={category.name}
  description={category.description || `Latest ${category.name} news and articles`}
>
  <Navbar />
  
  <main class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Category Header -->
      <header class="mb-12">
        <div class="flex items-center mb-4">
          <a href="/" class="text-news-primary hover:underline text-sm font-semibold">
            Beranda
          </a>
          <span class="mx-2 text-gray-400">/</span>
          <span class="text-sm text-gray-600">Kategori</span>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-black font-serif text-gray-900 mb-4">
          {category.name}
        </h1>
        
        {category.description && (
          <p class="text-xl text-gray-600 max-w-3xl">
            {category.description}
          </p>
        )}
      </header>
      
      <!-- Articles Grid -->
      {articles.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {articles.map((article) => (
            <ArticleCard article={article} />
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-500 text-lg">Belum ada artikel dalam kategori ini.</p>
        </div>
      )}
    </div>
  </main>
  
  <Footer />
</Layout>
